@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<section class="mx-auto mt-10 max-w-6xl rounded-xl bg-white p-6 shadow ring-1 ring-gray-200">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Dashboard Administrativo</h1>

    <!-- Cards de Indicadores -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-3 lg:grid-cols-4">
        <div class="rounded-lg bg-primary p-4 text-white shadow">
            <h2 class="text-lg font-semibold">Usuários Ativos</h2>
            <p class="text-2xl font-bold">120</p>
        </div>
        <div class="rounded-lg bg-secondary p-4 text-white shadow">
            <h2 class="text-lg font-semibold">Instituições Ativas</h2>
            <p class="text-2xl font-bold">45</p>
        </div>
        <div class="rounded-lg bg-highlight p-4 text-white shadow">
            <h2 class="text-lg font-semibold">Pedidos Ativos</h2>
            <p class="text-2xl font-bold">30</p>
        </div>
        <div class="rounded-lg bg-accent p-4 text-white shadow">
            <h2 class="text-lg font-semibold">Pedidos Concluídos</h2>
            <p class="text-2xl font-bold">150</p>
        </div>
    </div>

    <!-- Acesso Rápido -->
    <h2 class="mt-8 text-lg font-semibold text-gray-700">Acesso Rápido</h2>
    <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        <a href="/Admin/Usuarios" class="flex items-center justify-center rounded-lg bg-gray-100 p-4 shadow hover:bg-gray-200">
            <i class="fa fa-user text-xl text-primary"></i>
            <span class="ml-2 font-semibold text-gray-700">Usuários</span>
        </a>
        <a href="/Admin/Instituicoes" class="flex items-center justify-center rounded-lg bg-gray-100 p-4 shadow hover:bg-gray-200">
            <i class="fa fa-building text-xl text-secondary"></i>
            <span class="ml-2 font-semibold text-gray-700">Instituições</span>
        </a>
        <a href="/Admin/Categorias" class="flex items-center justify-center rounded-lg bg-gray-100 p-4 shadow hover:bg-gray-200">
            <i class="fa fa-tags text-xl text-highlight"></i>
            <span class="ml-2 font-semibold text-gray-700">Categorias</span>
        </a>
        <a href="/Admin/Anuncios" class="flex items-center justify-center rounded-lg bg-gray-100 p-4 shadow hover:bg-gray-200">
            <i class="fa fa-bullhorn text-xl text-accent"></i>
            <span class="ml-2 font-semibold text-gray-700">Anúncios</span>
        </a>
        <a href="/Admin/Pedidos" class="flex items-center justify-center rounded-lg bg-gray-100 p-4 shadow hover:bg-gray-200">
            <i class="fa fa-shopping-cart text-xl text-primary"></i>
            <span class="ml-2 font-semibold text-gray-700">Pedidos</span>
        </a>
    </div>
</section>
