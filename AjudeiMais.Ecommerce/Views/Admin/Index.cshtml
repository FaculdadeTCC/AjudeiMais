@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="container my-5">
    <div class="card shadow-lg rounded-lg p-4 p-md-5 mx-auto" style="max-width: 1200px;">
        <h1 class="mb-4 text-center text-primary">
            <i class="fas fa-chart-line me-2"></i> Dashboard Administrativo
        </h1>
        <hr class="mb-4" />

        <h2 class="mb-3 text-secondary">
            <i class="fas fa-tachometer-alt me-2"></i> Visão Geral
        </h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
            <div class="col">
                <div class="card text-white bg-primary-gradient h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-users fa-2x me-3 opacity-75"></i>
                            <h5 class="card-title mb-0">Usuários Ativos</h5>
                        </div>
                        <p class="card-text display-4 fw-bold">120</p>
                    </div>
                    <div class="card-footer bg-white bg-opacity-10 border-0 text-end py-2">
                        <small>Última atualização: hoje</small>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-info-gradient h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-building fa-2x me-3 opacity-75"></i>
                            <h5 class="card-title mb-0">Instituições Ativas</h5>
                        </div>
                        <p class="card-text display-4 fw-bold">45</p>
                    </div>
                    <div class="card-footer bg-white bg-opacity-10 border-0 text-end py-2">
                        <small>Última atualização: hoje</small>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-warning-gradient h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-hourglass-half fa-2x me-3 opacity-75"></i>
                            <h5 class="card-title mb-0">Pedidos Ativos</h5>
                        </div>
                        <p class="card-text display-4 fw-bold">30</p>
                    </div>
                    <div class="card-footer bg-white bg-opacity-10 border-0 text-end py-2">
                        <small>Última atualização: hoje</small>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-success-gradient h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle fa-2x me-3 opacity-75"></i>
                            <h5 class="card-title mb-0">Pedidos Concluídos</h5>
                        </div>
                        <p class="card-text display-4 fw-bold">150</p>
                    </div>
                    <div class="card-footer bg-white bg-opacity-10 border-0 text-end py-2">
                        <small>Última atualização: ontem</small>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="mb-3 text-secondary">
            <i class="fas fa-bolt me-2"></i> Acesso Rápido
        </h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            <div class="col">
                <a asp-controller="Usuario" asp-action="Index" class="card text-decoration-none text-dark bg-light-hover h-100 shadow-sm transition-effect">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center p-3">
                        <i class="fas fa-user-friends fa-3x text-primary mb-2"></i>
                        <h6 class="card-title mb-0 fw-bold">Usuários</h6>
                    </div>
                </a>
            </div>
            <div class="col">
                <a asp-controller="Instituicao" asp-action="Index" class="card text-decoration-none text-dark bg-light-hover h-100 shadow-sm transition-effect">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center p-3">
                        <i class="fas fa-university fa-3x text-info mb-2"></i>
                        <h6 class="card-title mb-0 fw-bold">Instituições</h6>
                    </div>
                </a>
            </div>
            <div class="col">
                <a asp-route="categoria-index" class="card text-decoration-none text-dark bg-light-hover h-100 shadow-sm transition-effect">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center p-3">
                        <i class="fas fa-tags fa-3x text-warning mb-2"></i>
                        <h6 class="card-title mb-0 fw-bold">Categorias</h6>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/Admin/Anuncios" class="card text-decoration-none text-dark bg-light-hover h-100 shadow-sm transition-effect">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center p-3">
                        <i class="fas fa-bullhorn fa-3x text-danger mb-2"></i>
                        <h6 class="card-title mb-0 fw-bold">Anúncios</h6>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/Admin/Pedidos" class="card text-decoration-none text-dark bg-light-hover h-100 shadow-sm transition-effect">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center p-3">
                        <i class="fas fa-shopping-cart fa-3x text-success mb-2"></i>
                        <h6 class="card-title mb-0 fw-bold">Pedidos</h6>
                    </div>
                </a>
            </div>
        </div>

        <hr class="my-5" />
        <h2 class="mb-3 text-secondary">
            <i class="fas fa-chart-pie me-2"></i> Dados Detalhados
        </h2>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light fw-bold"><i class="fas fa-chart-bar me-2"></i> Distribuição de Usuários por Tipo</div>
                    <div class="card-body">
                        <p class="text-muted text-center">Gráfico de barras ou pizza aqui (Ex: Chart.js)</p>
                        <div class="placeholder-glow">
                            <span class="placeholder col-12" style="height: 200px;"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-light fw-bold"><i class="fas fa-history me-2"></i> Atividade Recente</div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Novo usuário cadastrado: João S. <small class="text-muted">5 min atrás</small>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Pedido #1234 atualizado para "Concluído" <small class="text-muted">15 min atrás</small>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Categoria "Alimentos" criada <small class="text-muted">1 hora atrás</small>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Instituição "Hospital da Luz" aprovada <small class="text-muted">3 horas atrás</small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

