@{
    ViewData["Title"] = "Gerenciar Categorias";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="card border-0 shadow-lg rounded-lg">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: var(--color-secondary);">
                    <h2 class="h5 mb-0" style="font-family: var(--font-family-heading); font-weight: var(--font-weight-bold); color: var(--color-gray-100);">
                        Gerenciar Categorias
                    </h2>
                    <a href="@Url.RouteUrl("admin-categoria-produto-cadastrar")" target="_blank" class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#modalCreateCategory" style="font-family: var(--font-family-accent);">
                        <i class="fa fa-plus me-2"></i>Criar Categoria
                    </a>
                </div>
                <div class="card-body" style="background-color: var(--color-surface);">
                    <!-- Barra de pesquisa -->
                    <form class="mb-4">
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-gray-200" id="search-addon">
                                <i class="fa fa-search text-gray-600"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" placeholder="Buscar categoria..." aria-label="Buscar categoria" aria-describedby="search-addon"
                                   style="font-family: var(--font-family-base); border-radius: var(--radius-md);" />
                        </div>
                    </form>

                    <!-- Tabela de categorias -->
                    <div class="table-responsive shadow-sm rounded-lg">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" style="font-family: var(--font-family-base); font-weight: var(--font-weight-medium);">Nome</th>
                                    <th scope="col" style="font-family: var(--font-family-base); font-weight: var(--font-weight-medium);">Ícone</th>
                                    <th scope="col" style="font-family: var(--font-family-base); font-weight: var(--font-weight-medium);">Status</th>
                                    <th scope="col" class="text-center" style="font-family: var(--font-family-base); font-weight: var(--font-weight-medium);">Ações</th>
                                </tr>
                            </thead>
                            <tbody class="bg-gray-100">
                                <tr>
                                    <td>Roupas</td>
                                    <td><i class="fa fa-tshirt fa-lg text-secondary"></i></td>
                                    <td>
                                        <span class="badge" style="background-color: var(--color-success); font-family: var(--font-family-base);">
                                            Ativo
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-outline-primary me-2" title="Editar">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" title="Excluir">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <!-- Mais linhas... -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginação -->
                    <nav aria-label="Paginação" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Anterior">
                                    &laquo;
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                            <li class="page-item"><a class="page-link" href="#">10</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Próxima">
                                    &raquo;
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_CadastroCategoriaProduto");