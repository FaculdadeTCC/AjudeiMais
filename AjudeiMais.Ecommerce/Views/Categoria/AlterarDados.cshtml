@{
    ViewData["Title"] = "Cadastro de Categoria";
}

<div class="container my-5">
    <div class="card shadow-sm rounded-lg p-4 p-md-5 mx-auto" style="max-width: 700px;">
        <h1 class="mb-4 text-center text-primary">
            <i class="fas fa-folder-plus me-2"></i> Cadastro de Categoria
        </h1>
        <hr class="mb-4" />

        <form method="post" enctype="multipart/form-data">
            <h2 class="mb-3 text-secondary">
                <i class="fas fa-info-circle me-2"></i> Dados da Categoria
            </h2>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="nomeCategoria" name="Nome" placeholder="Nome da Categoria" required />
                        <label for="nomeCategoria" class="required-field">Nome da Categoria</label>
                    </div>
                    @* Se você usa validação ASP.NET Core, adicione: *@
                    @* <span asp-validation-for="Nome" class="text-danger"></span> *@
                </div>

                <div class="col-md-6">
                    <label for="iconeCategoria" class="form-label required-field">Ícone da Categoria</label>
                    <input type="file" class="form-control" id="iconeCategoria" name="Icone" accept="image/*" required />
                    <div class="form-text">Envie uma imagem para o ícone da categoria.</div>
                    @* Se você usa validação ASP.NET Core, adicione: *@
                    @* <span asp-validation-for="Icone" class="text-danger"></span> *@
                </div>
            </div>

            <div class="mb-4">
                <label for="statusCategoria" class="form-label required-field">Status</label>
                <select class="form-select" id="statusCategoria" name="Status" required>
                    <option value="" selected disabled>Selecione um status</option>
                    <option value="Ativo">Ativo</option>
                    <option value="Inativo">Inativo</option>
                </select>
                @* Se você usa validação ASP.NET Core, adicione: *@
                @* <span asp-validation-for="Status" class="text-danger"></span> *@
            </div>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <button type="reset" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-times-circle me-2"></i> Cancelar
                </button>
                <button type="submit" class="btn btn-primary px-4 py-2">
                    <i class="fas fa-plus-circle me-2"></i> Cadastrar Categoria
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @* Se você estiver usando validação client-side do ASP.NET Core MVC (jQuery Validation)*@
    @* <partial name="_ValidationScriptsPartial" /> *@

    <script>
        // Pequeno script para adicionar o asterisco de "campo obrigatório" aos labels dos floating labels
        // Isso é uma melhoria visual para campos que já são 'required' no HTML
        document.querySelectorAll('.form-floating label').forEach(label => {
            if (label.nextElementSibling && label.nextElementSibling.hasAttribute('required')) {
                if (!label.classList.contains('required-field')) {
                    label.classList.add('required-field');
                }
            }
        });
    </script>
}

<style>
    /* Estilos Customizados */
    body {
        background-color: #f8f9fa; /* Um cinza bem clarinho para o fundo da página */
    }

    .card {
        border: none;
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.08) !important; /* Sombra mais pronunciada */
    }

    .text-primary {
        color: #0d6efd !important; /* Azul padrão do Bootstrap */
    }

    .text-secondary {
        color: #6c757d !important; /* Cinza padrão do Bootstrap */
    }

    hr {
        border-top: 1px solid rgba(0, 0, 0, 0.1); /* Linha divisória suave */
    }

    .form-control, .form-select {
        border-radius: 0.5rem; /* Bordas mais arredondadas */
        border: 1px solid #ced4da; /* Borda padrão */
        height: calc(3.5rem + 2px); /* Altura padrão para form-floating */
        padding: 1rem 0.75rem; /* Padding para form-floating */
    }

    .form-floating > label {
        padding: 1rem 0.75rem; /* Padding para label do form-floating */
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd; /* Azul primário ao focar */
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25); /* Sombra de foco azul */
    }

    /* Estilo para o asterisco de campo obrigatório */
    .required-field::after {
        content: " *";
        color: #dc3545; /* Vermelho padrão para erro/required */
    }

    /* Botões */
    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        font-weight: 600; /* Mais negrito */
        transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
        font-weight: 600;
        transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out, border-color 0.2s ease-in-out;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }

    /* Estilo específico para o input type="file" para combinar com o visual */
    .form-control[type="file"] {
        padding-top: 0.75rem; /* Ajuste para centralizar o texto do arquivo */
    }
</style>