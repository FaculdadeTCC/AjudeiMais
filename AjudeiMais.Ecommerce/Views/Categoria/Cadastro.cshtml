@{
    ViewData["Title"] = "Cadastro de Categoria";
}

@section Styles {
    <link rel="stylesheet" href="~/css/categoria/categoria.css" asp-append-version="true" />
}

<div class="page-content">
    <div class="col-md-8 mt-5 m-auto">
        <div class="card card-body mt-4 border-0 shadow-sm">
            <h4 class="mb-3 text-primary fw-semibold">
                <i class="fas fa-folder-plus me-2"></i>Cadastro de Categoria
            </h4>

            <form method="post" action="@Url.RouteUrl("admin-categoria-produto-cadastrar") enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="row g-4">
                    <!-- Nome da Categoria -->
                    <div class="col-md-12">
                        <label for="Nome" class="form-label">Nome da Categoria <span class="text-danger">*</span></label>
                        <input type="text" name="Nome" id="Nome" class="form-control" required placeholder="Ex: Alimentos, Roupas" />
                        <div class="invalid-feedback">
                            Por favor, informe o nome da categoria.
                        </div>
                    </div>

                    <!-- Ícone -->
                    <div class="col-md-12">
                        <label for="Icone" class="form-label">Ícone da Categoria <span class="text-danger">*</span></label>
                        <input class="form-control" type="file" name="Icone" id="Icone" accept="image/*" required />
                        <div class="form-text">Formato: JPG, PNG, SVG. Tamanho máximo: 2MB.</div>
                        <div class="invalid-feedback">
                            Por favor, selecione um ícone.
                        </div>
                    </div>

                <!-- Botões -->
                <div class="d-flex justify-content-between mt-5">
                    <button type="reset" class="btn btn-light border">
                        <i class="fas fa-times-circle me-1"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Cadastrar Categoria
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validação estilo Bootstrap
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
