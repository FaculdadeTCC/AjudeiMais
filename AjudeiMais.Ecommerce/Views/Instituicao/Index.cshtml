@{
    ViewData["Title"] = "Gerenciar Instituições";
}

<section class="mx-auto mt-10 max-w-6xl rounded-xl bg-white p-6 shadow ring-1 ring-gray-200">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Gerenciar Instituições</h1>

    <div class="mb-4 flex justify-between">
        <input type="text" placeholder="Buscar instituição..." class="w-1/3 rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30">
        <button class="rounded-lg bg-primary px-4 py-2 text-white transition hover:bg-hover">
            <i class="fa fa-plus"></i> Criar Instituição
        </button>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full border-collapse overflow-hidden rounded-lg shadow-md">
            <thead class="bg-secondary text-white">
                <tr>
                    <th class="px-4 py-2 text-left">Nome</th>
                    <th class="px-4 py-2 text-left">E-mail</th>
                    <th class="px-4 py-2 text-left">Telefone</th>
                    <th class="px-4 py-2 text-left">Status</th>
                    <th class="px-4 py-2 text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <tr class="hover:bg-gray-100">
                    <td class="px-4 py-2">Instituição ABC</td>
                    <td class="px-4 py-2">contato@instituicaoabc.com</td>
                    <td class="px-4 py-2">(11) 99999-9999</td>
                    <td class="px-4 py-2">
                        <span class="rounded-full bg-green-500 px-3 py-1 text-xs font-semibold text-white">Ativo</span>
                    </td>
                    <td class="flex justify-center space-x-2 px-4 py-2">
                        <button class="rounded-lg bg-blue-500 px-3 py-1 text-white transition hover:bg-blue-600">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="rounded-lg bg-red-500 px-3 py-1 text-white transition hover:bg-red-600">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
                <!-- Adicione mais instituições aqui -->
            </tbody>
        </table>
    </div>
</section>

<!-- Paginação visual -->
<div class="mt-10 flex justify-center gap-2">
    <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">
        &laquo; Anterior
    </button>

    <button class="rounded bg-primary px-3 py-1 text-sm font-medium text-white">1</button>
    <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">2</button>
    <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">3</button>
    <span class="px-2 py-1 text-sm text-gray-500">...</span>
    <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">10</button>

    <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">
        Próxima &raquo;
    </button>
</div>