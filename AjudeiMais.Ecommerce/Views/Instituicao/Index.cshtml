@model List<AjudeiMais.Ecommerce.Models.Instituicao.InstituicaoPerfilModel>

@{
    ViewData["Title"] = "Gerenciar Instituições";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-body">
            <h1 class="mb-4 h4 fw-bold text-dark">Gerenciar Instituições</h1>

            <div class="row align-items-center mb-4">
                <div class="col-md-6 mb-2 mb-md-0">
                    <input type="text" class="form-control" placeholder="Buscar instituição...">
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="@Url.Action("Cadastro", "Instituicao")" class="btn btn-primary">
                        <i class="fa fa-plus me-1"></i> Criar Instituição
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Telefone</th>
                            <th>Status</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var inst in Model)
                            {
                                <tr>
                                    <td>@inst.Nome</td>
                                    <td>@inst.Email</td>
                                    <td>@inst.Telefone</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="@Url.Action("Editar", "Instituicao", new { guid = inst.GUID})" class="btn btn-sm btn-primary" title="Editar">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-danger" title="Excluir" onclick="confirmDelete('@inst.GUID')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">Nenhuma instituição encontrada.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Paginação fictícia (você pode adaptar com lógica real depois) -->
    <nav class="mt-4 d-flex justify-content-center">
        <ul class="pagination">
            <li class="page-item disabled">
                <span class="page-link">&laquo; Anterior</span>
            </li>
            <li class="page-item active"><span class="page-link">1</span></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item disabled"><span class="page-link">...</span></li>
            <li class="page-item"><a class="page-link" href="#">10</a></li>
            <li class="page-item"><a class="page-link" href="#">Próxima &raquo;</a></li>
        </ul>
    </nav>
</div>

@section Scripts {
    <script>
        function confirmDelete(guid) {
            if (confirm("Tem certeza que deseja excluir esta instituição?")) {
                // Aqui você pode fazer um fetch/POST para deletar
                alert("Deletar: " + guid); // Remova isso quando implementar
            }
        }
    </script>
}
