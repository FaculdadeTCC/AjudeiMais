@{
    ViewData["Title"] = "Alterar Dados da empresa";
}

<section class="mx-auto mt-10 max-w-4xl rounded-xl bg-white p-6 shadow ring-1 ring-gray-200">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Cadastro de Instituição</h1>

    <form method="post" enctype="multipart/form-data" class="space-y-8">
        <!-- Grupo: Dados da Instituição -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Dados da Instituição</h2>

            <!-- Nome -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Nome da Instituição <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Nome" placeholder="Ex: Instituto Esperança Solidária" class="w-full rounded-md border border-gray-400 bg-gray-50 px-4 py-2 text-base shadow-sm transition focus:border-orange-500 focus:bg-white focus:ring-2 focus:ring-orange-300" />
            </div>

            <!-- E-mail -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    E-mail <span class="text-red-500">*</span>
                </label>
                <input type="email" name="Email" placeholder="contato@institutoesperanca.org.br" class="w-full rounded-md border border-gray-400 bg-gray-50 px-4 py-2 text-base shadow-sm transition focus:border-orange-500 focus:bg-white focus:ring-2 focus:ring-orange-300" />
            </div>

            <!-- Telefone -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Telefone <span class="text-red-500">*</span>
                </label>
                <input type="tel" name="Telefone" placeholder="(11) 91234-5678" class="w-full rounded-md border border-gray-400 bg-gray-50 px-4 py-2 text-base shadow-sm transition focus:border-orange-500 focus:bg-white focus:ring-2 focus:ring-orange-300" />
            </div>

            <!-- Foto(s) -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Foto(s) da Instituição <span class="text-red-500">*</span>
                </label>
                <input type="file" name="Fotos" multiple accept="image/*"
                       class="block w-full text-sm text-gray-600 file:mr-4 file:rounded-md file:border-0 file:bg-secondary file:px-4 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-orange-700" />
            </div>

            <!-- Descrição -->
            <div class="md:col-span-2">
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Descrição <span class="text-red-500">*</span>
                </label>
                <textarea name="Descricao" rows="4"
                          class="w-full rounded-md border border-gray-400 bg-gray-50 px-4 py-2 text-base shadow-sm transition focus:border-orange-500 focus:bg-white focus:ring-2 focus:ring-orange-300"
                          placeholder="Atuamos na arrecadação e distribuição de alimentos, roupas e itens de higiene para famílias em situação de vulnerabilidade social. Nossa missão é promover dignidade e inclusão."></textarea>
            </div>
        </div>

        <!-- Grupo: Criar Senha -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Criar Senha</h2>

            <!-- Senha -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Senha</label>
                <input type="password" name="Senha" placeholder="Digite uma senha segura" class="w-full rounded-md border border-gray-400 bg-gray-50 px-4 py-2 text-base shadow-sm transition focus:border-orange-500 focus:bg-white focus:ring-2 focus:ring-orange-300" />
            </div>

            <!-- Confirmar Senha -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Confirmar Senha</label>
                <input type="password" name="ConfirmarSenha" placeholder="Confirme a senha digitada" class="w-full rounded-md border border-gray-400 bg-gray-50 px-4 py-2 text-base shadow-sm transition focus:border-orange-500 focus:bg-white focus:ring-2 focus:ring-orange-300" />
            </div>
        </div>

        <!-- Botões -->
        <div class="mt-4 flex flex-col-reverse gap-4 sm:flex-row sm:justify-between">
            <button type="submit"
                    class="w-full rounded-lg bg-secondary px-6 py-2 text-white transition hover:bg-orange-700 sm:w-auto">
                Salvar Alterações
            </button>

            <button type="button"
                    class="w-full rounded-lg border border-red-500 px-6 py-2 text-red-500 transition hover:bg-red-50 sm:w-auto">
                Excluir Conta
            </button>
        </div>
    </form>
</section>
