@{
    ViewData["Title"] = "Gerenciar Anúncio";
}

@section Styles {
    <link rel="stylesheet" href="~/css/produto/produto-cadastro.css" asp-append-version="true" />
}

<section class="my-5 container">
    <form id="formAnuncio" asp-action="SalvarAnuncio" method="post" enctype="multipart/form-data" novalidate>
        <!-- Tabs -->
        <ul class="nav nav-tabs mb-4" id="formTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="tab-detalhes" type="button" role="tab"
                        aria-controls="etapa-detalhes" aria-selected="true">
                    Detalhes do Item
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="tab-imagens" type="button" role="tab"
                        aria-controls="etapa-imagens" aria-selected="false" disabled>
                    Imagens do Item
                </button>
            </li>
        </ul>


        <div class="tab-content" id="formTabsContent">
            <!-- Etapa 1: Detalhes -->
            <div class="tab-pane fade show active" id="etapa-detalhes" role="tabpanel" aria-labelledby="tab-detalhes">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="Nome" class="form-label">Nome do Produto</label>
                        <input type="text" id="Nome" name="Nome" class="form-control" placeholder="Ex: Camiseta"
                               required />
                    </div>

                    <div class="col-md-6">
                        <label for="Condicao" class="form-label">Condição</label>
                        <select id="Condicao" name="Condicao" class="form-select" required>
                            <option value="">Selecione</option>
                            <option>Novo</option>
                            <option>Usado – Bom</option>
                            <option>Usado – Regular</option>
                            <option>Usado – Ruim</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="Validade" class="form-label">Validade</label>
                        <input type="date" id="Validade" name="Validade" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label for="Quantidade" class="form-label">Quantidade</label>
                        <input type="number" id="Quantidade" name="Quantidade" min="1" class="form-control"
                               required />
                    </div>

                    <div class="col-md-4">
                        <label for="Peso" class="form-label">Peso (kg)</label>
                        <input type="number" step="0.1" id="Peso" name="Peso" min="0" class="form-control"
                                />
                    </div>

                    <div class="col-md-6">
                        <label for="Categoria" class="form-label">Categoria</label>
                        <select id="Categoria" name="Categoria" class="form-select" required>
                            <option value="">Selecione</option>
                            <option>Alimentos</option>
                            <option>Roupas</option>
                            <option>Higiene</option>
                            <option>Móveis</option>
                            <option>Eletrônicos</option>
                            <option>Brinquedos</option>
                            <option>Outros</option>
                        </select>
                    </div>

                    <div class="col-md-12">
                        <label for="Descricao" class="form-label">Descrição</label>
                        <textarea id="Descricao" name="Descricao" rows="4" class="form-control"
                                  placeholder="Forneça uma descrição detalhada…" required></textarea>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="button" class="btn btn-primary" onclick="irParaTab(1)">Próximo</button>
                </div>
            </div>

            <!-- Etapa 2: Imagens -->
            <div class="tab-pane fade" id="etapa-imagens" role="tabpanel" aria-labelledby="tab-imagens">
                <div class="mb-3">
                    <label for="ImagemPrincipal" class="form-label">Imagem Principal</label>
                    <input type="file" id="ImagemPrincipal" name="ImagemPrincipal"
                           class="form-control" accept="image/*" required onchange="previewImagemPrincipal(event)" />
                </div>

                <div class="mb-3 text-center">
                    <img id="previewImagem" src="#" alt="Pré-visualização"
                         class="img-fluid d-none" style="max-height: 300px;" />
                </div>

                <div class="mb-3 text-center">
                    <a href="/anuncio/imagens" class="btn btn-outline-secondary">
                        <i class="fas fa-plus-circle"></i> Adicionar Mais Imagens
                    </a>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-secondary" onclick="irParaTab(0)">Voltar</button>
                    <button type="submit" class="btn btn-success">Salvar Anúncio</button>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <script>
        function irParaTab(index) {
            const form = document.getElementById("formAnuncio");
            const tabContents = ['etapa-detalhes', 'etapa-imagens'];
            const tabButtons = ['tab-detalhes', 'tab-imagens'];

            // Valida antes de ir para a próxima aba
            if (index > 0 && !form.checkValidity()) {
                form.reportValidity();
                return;
            }

            // Remover classes de todas as tabs
            tabContents.forEach(id => document.getElementById(id).classList.remove('show', 'active'));
            tabButtons.forEach(id => document.getElementById(id).classList.remove('active'));

            // Ativar a tab correta
            document.getElementById(tabContents[index]).classList.add('show', 'active');
            document.getElementById(tabButtons[index]).classList.add('active');
        }

        // Impede clique direto nas abas (opcional)
        document.querySelectorAll('.nav-link').forEach(tab => {
            tab.addEventListener('click', e => {
                e.preventDefault();
            });
        });

        function previewImagemPrincipal(event) {
            const file = event.target.files[0];
            const preview = document.getElementById("previewImagem");
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}
