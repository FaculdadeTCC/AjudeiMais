@{
    ViewData["Title"] = "Home Page";
}

<div class="mx-auto mt-8 px-4">
    <!-- Banner -->
    <div class="mb-8">
        <img src="https://placehold.co/1200x300?text=Banner" class="w-full rounded-lg shadow" alt="Banner">
    </div>

    <!-- Cards de Produtos -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        @for (int i = 0; i < 8; i++) // Exemplo com 8 cards
        {
            <div class="flex flex-col rounded-lg bg-white shadow transition duration-300 hover:shadow-lg">
                <img src="https://placehold.co/300x300?text=Produto" class="h-48 w-full rounded-t-lg object-cover" alt="Imagem do Produto" />
                <div class="flex flex-grow flex-col p-4">
                    <h5 class="mb-1 text-lg font-semibold">Nome do Produto</h5>
                    <p class="text-sm text-gray-600"><strong>Categoria:</strong> Categoria Exemplo</p>
                    <p class="text-sm text-gray-600">
                        <strong>Doador:</strong>
                        <a href="#" class="text-blue-600 hover:underline">Nome do Doador</a>
                    </p>
                    <p class="text-sm text-gray-600"><strong>Quantidade:</strong> 5 unidades</p>
                    <p class="mb-4 text-sm text-gray-600"><strong>Localização:</strong> São Paulo, SP</p>
                    <a href="#" class="mt-auto rounded bg-blue-600 px-4 py-2 text-center text-sm text-white transition duration-200 hover:bg-blue-700">
                        Ver Detalhes
                    </a>
                </div>
            </div>
        }
    </div>
</div>
