@{
    ViewData["Title"] = "Home Page";
}

<div class="mx-auto mt-8 px-4">

    <!-- Carousel com Splide -->
    <div class="splide mb-8 rounded-lg shadow" aria-label="Banner Carousel">
        <div class="splide__track rounded-lg">
            <ul class="splide__list">
                <li class="splide__slide">
                    <img src="https://placehold.co/1200x300/FF6B00/fff?text=Banner+1" alt="Banner 1" class="w-full rounded-lg object-cover">
                </li>
                <li class="splide__slide">
                    <img src="https://placehold.co/1200x300/2E2E2E/fff?text=Banner+2" alt="Banner 2" class="w-full rounded-lg object-cover">
                </li>
                <li class="splide__slide">
                    <img src="https://placehold.co/1200x300/F8F9FA/333?text=Banner+3" alt="Banner 3" class="w-full rounded-lg object-cover">
                </li>
            </ul>
        </div>
    </div>

    <!-- Cards de Produtos -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        @for (int i = 0; i < 8; i++) // Exemplo com 8 cards
        {
            <div class="flex flex-col rounded-lg bg-white shadow transition duration-300 hover:shadow-lg">
                <img src="https://placehold.co/300x300?text=Produto" class="h-48 w-full rounded-t-lg object-cover" alt="Imagem do Produto" />
                <div class="flex flex-grow flex-col p-4">
                    <h5 class="mb-1 text-lg font-semibold text-secondary">Nome do Produto</h5>
                    <p class="text-sm text-gray-600"><strong>Categoria:</strong> Categoria Exemplo</p>
                    <p class="text-sm text-gray-600">
                        <strong>Doador:</strong>
                        <a href="#" class="text-primary hover:underline">Nome do Doador</a>
                    </p>
                    <p class="text-sm text-gray-600"><strong>Quantidade:</strong> 5 unidades</p>
                    <p class="mb-4 text-sm text-gray-600"><strong>Localização:</strong> São Paulo, SP</p>
                    <a href="#" class="mt-auto rounded bg-primary px-4 py-2 text-center text-sm text-white transition duration-200 hover:bg-orange-700">
                        Ver Detalhes
                    </a>
                </div>
            </div>
        }
    </div>
</div>
