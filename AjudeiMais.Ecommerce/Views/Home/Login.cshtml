@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <div class="mb-4 text-center">
            <h1 class="h4 fw-bold text-dark">Entrar na Plataforma</h1>
            <p class="text-muted small">Acesse sua conta para continuar</p>
        </div>

        @if (TempData["AlertMessage"] != null)
        {
            var alertClass = TempData["AlertType"]?.ToString() == "error" ? "alert-danger" : "alert-success";
            <div class="alert @alertClass">
                @TempData["AlertMessage"]
            </div>
        }

        <form method="post" asp-controller="Home" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">E-mail <span class="text-danger">*</span></label>
                <input asp-for="Email" type="email" name="Email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Senha <span class="text-danger">*</span></label>
                <input asp-for="Senha" type="password" name="Senha" class="form-control" required />
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" name="Lembrar" class="form-check-input" id="lembrarCheck" />
                <label class="form-check-label" for="lembrarCheck">Lembrar de mim</label>
            </div>

            <div class="mb-3">
                <a href="#" class="text-decoration-none text-primary">Esqueci minha senha</a>
            </div>

            <button type="submit" class="btn btn-primary w-100">Entrar</button>

            <p class="mt-3 text-center small text-muted">
                Ainda não tem uma conta?
                <a href="/Cadastro" class="text-decoration-none fw-semibold text-primary">Cadastre-se</a>
            </p>
        </form>
    </div>
</div>
