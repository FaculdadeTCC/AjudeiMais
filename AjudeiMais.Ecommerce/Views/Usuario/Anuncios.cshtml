@{
    ViewData["Title"] = "Meus Anúncios";
}

<section class="mx-auto mt-10 max-w-6xl px-4">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Meus Anúncios</h1>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        @for (int i = 0; i < 6; i++)
        {
            bool doado = i % 2 == 0; // Simula alguns produtos já doados
            string categoria = $"Categoria {i}";

            <div class="relative flex flex-col overflow-hidden rounded-lg bg-white shadow transition duration-300 hover:shadow-lg">
                <div class="relative">
                    <img src="https://placehold.co/400x400?text=Produto+@i" class="h-52 w-full object-cover" alt="Imagem do Produto" />

                    <!-- Badge de estado -->
                    <span class="absolute left-2 top-2 inline-block rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-800 shadow">
                        Bom
                    </span>

                    @if (doado)
                    {
                        <!-- Selo de doado -->
                        <span class="absolute right-2 top-2 inline-block rounded-full bg-red-500 px-3 py-1 text-xs font-semibold text-white shadow">
                            Doado
                        </span>
                    }
                </div>

                <div class="flex flex-grow flex-col p-4">
                    <!-- Categoria acima do nome -->
                    <p class="mb-1 text-sm font-semibold uppercase text-primary">@categoria</p>

                    <h5 class="text-text-primary mb-1 text-lg font-semibold">Produto @i</h5>

                    <p class="text-sm text-gray-600">
                        <strong>Quantidade:</strong> @(3 - i)
                    </p>
                    <p class="mb-4 text-sm text-gray-600">
                        <strong>Localização:</strong> Belo Horizonte, MG
                    </p>

                    <div class="mt-auto flex flex-col gap-2">
                        <a href="#" class="rounded bg-secondary px-4 py-2 text-center text-sm text-white transition duration-200 hover:bg-hover">
                            Ver Detalhes
                        </a>
                        <a href="#" class="rounded border border-red-500 px-4 py-2 text-center text-sm text-red-500 transition hover:bg-red-50">
                            Remover
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginação visual -->
    <div class="mt-10 flex justify-center gap-2">
        <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">
            &laquo; Anterior
        </button>

        <button class="rounded bg-primary px-3 py-1 text-sm font-medium text-white">1</button>
        <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">2</button>
        <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">3</button>
        <span class="px-2 py-1 text-sm text-gray-500">...</span>
        <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">10</button>

        <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">
            Próxima &raquo;
        </button>
    </div>
</section>
