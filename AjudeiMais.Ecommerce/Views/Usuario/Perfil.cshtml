@{
    ViewData["Title"] = "Luiz - Perfil";
}

<section class="mx-auto mt-10 max-w-5xl rounded-2xl bg-white p-6 shadow-lg ring-1 ring-gray-200">
    <!-- Topo do Perfil -->
    <div class="flex flex-col items-center gap-6 sm:flex-row sm:items-start">
        <!-- Foto do usuário -->
        <div class="relative">
            <img src="https://placehold.co/150x150" alt="Foto do usuário"
                 class="h-36 w-36 rounded-full object-cover ring-2 ring-primary" />
            <!-- Selo de verificado -->
            <span class="absolute -bottom-2 -right-2 inline-flex items-center justify-center rounded-full bg-green-500 p-1 shadow-md ring-2 ring-white">
                <i class="fas fa-check text-xs text-white"></i>
            </span>
        </div>

        <!-- Informações principais -->
        <div class="flex-1">
            <h2 class="flex items-center gap-2 text-2xl font-bold text-gray-800">
                João Silva
            </h2>
            <p class="text-sm text-gray-600">Belo Horizonte, MG</p>

            <!-- Avaliação -->
            <div class="mt-2 flex items-center gap-1 text-yellow-500">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
                <span class="ml-2 text-sm text-gray-600">(4.5 de 5)</span>
            </div>

            <!-- Botão de mensagem -->
            <a href="#"
               class="mt-4 inline-block rounded-full bg-secondary px-6 py-2 text-sm font-semibold text-white shadow hover:bg-hover">
                Enviar Mensagem
            </a>
        </div>
    </div>

    <!-- Produtos anunciados -->
    <div class="mt-10">
        <h3 class="mb-4 text-lg font-semibold text-gray-800">Produtos Anunciados</h3>
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
            @for (int i = 0; i < 6; i++)
            {
                bool doado = i % 3 == 0;
                string categoria = "Roupas"; // Exemplo fixo

                <div class="flex flex-col overflow-hidden rounded-lg bg-white shadow transition duration-300 hover:shadow-lg">
                    <div class="relative">
                        <img src="https://placehold.co/400x400?text=Camisa+Masculina"
                             class="@(doado ? "opacity-50" : "opacity-100") h-52 w-full object-cover"
                             alt="Imagem do Produto" />

                        @if (doado)
                        {
                            <span class="absolute left-2 top-2 inline-block rounded-full bg-gray-300 px-3 py-1 text-xs font-semibold text-gray-800 shadow">
                                Doado
                            </span>
                        }
                        else
                        {
                            <span class="absolute left-2 top-2 inline-block rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-800 shadow">
                                Bom
                            </span>
                        }
                    </div>
                    <div class="flex flex-grow flex-col p-4">
                        <!-- Categoria como título acima do nome -->
                        <p class="mb-1 text-sm font-semibold uppercase text-primary">@categoria</p>

                        <h5 class="text-text-primary mb-1 text-lg font-semibold">Camisa Masculina M</h5>

                        <p class="text-sm text-gray-600">
                            <strong>Doador:</strong>
                            <a href="#" class="hover:underline">João Silva</a>
                        </p>
                        <p class="text-sm text-gray-600">
                            <strong>Quantidade:</strong> 3 unidades
                        </p>
                        <p class="mb-4 text-sm text-gray-600">
                            <strong>Localização:</strong> Belo Horizonte, MG
                        </p>

                        <div class="mt-auto flex flex-col gap-2">
                            <a href="#"
                               class="rounded bg-secondary px-4 py-2 text-center text-sm text-white transition duration-200 hover:bg-green-700 @(doado ? "opacity-50 pointer-events-none" : "")">
                                Ver Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginação visual -->
        <div class="mt-8 flex justify-center gap-2">
            <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">
                &laquo; Anterior
            </button>

            <button class="rounded bg-primary px-3 py-1 text-sm font-medium text-white">1</button>
            <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">2</button>
            <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">3</button>
            <span class="px-2 py-1 text-sm text-gray-500">...</span>
            <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">10</button>

            <button class="rounded px-3 py-1 text-sm font-medium text-gray-600 hover:bg-gray-200">
                Próxima &raquo;
            </button>
        </div>
    </div>
</section>
