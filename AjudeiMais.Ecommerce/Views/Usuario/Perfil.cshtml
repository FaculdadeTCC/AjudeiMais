@{
    ViewData["Title"] = "Luiz - Perfil";
}
<section class="container my-5">
    <!-- Topo do Perfil -->
    <div class="row align-items-start mb-5">
        <!-- Foto do usuário -->
        <div class="col-auto position-relative text-center">
            <img src="https://placehold.co/150x150" class="rounded-circle border border-primary border-2" alt="Foto do usuário" width="150" height="150">
            <!-- Selo de verificado -->
            <span class="position-absolute translate-middle p-2 bg-success rounded-circle border border-light bottom-0 end-0">
                <i class="fas fa-check text-white small"></i>
            </span>
        </div>

        <!-- Informações principais -->
        <div class="col">
            <h2 class="d-flex align-items-center gap-2 fw-bold text-dark">João Silva</h2>
            <p class="text-muted mb-2">Belo Horizonte, MG</p>

            <!-- Avaliação -->
            <div class="d-flex align-items-center text-warning mb-3">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
                <span class="ms-2 text-muted small">(4.5 de 5)</span>
            </div>

            <a href="#" class="btn btn-success rounded-pill">Enviar Mensagem</a>
        </div>
    </div>

    <!-- Produtos Anunciados -->
    <div>
        <h3 class="mb-4 h5 fw-semibold">Produtos Anunciados</h3>
        <div class="row g-4">
            @for (int i = 0; i < 6; i++)
            {
                bool doado = i % 3 == 0;
                string categoria = "Roupas";

                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="https://placehold.co/400x400?text=Camisa+Masculina" class="card-img-top @(doado ? "opacity-50" : "")" alt="Imagem do Produto">
                            @if (doado)
                            {
                                <span class="position-absolute top-0 start-0 m-2 badge bg-secondary text-dark">Doado</span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 start-0 m-2 badge bg-success text-light">Bom</span>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="text-uppercase small fw-bold text-primary mb-1">@categoria</p>
                            <h5 class="card-title mb-1">Camisa Masculina M</h5>
                            <p class="card-text small mb-1"><strong>Doador:</strong> <a href="#" class="text-decoration-underline">João Silva</a></p>
                            <p class="card-text small mb-1"><strong>Quantidade:</strong> 3 unidades</p>
                            <p class="card-text small mb-3"><strong>Localização:</strong> Belo Horizonte, MG</p>
                            <a href="#" class="btn btn-success mt-auto @(doado ? "disabled opacity-50" : "")">Ver Detalhes</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Paginação visual -->
        <nav class="mt-5 d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">&laquo; Anterior</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item"><a class="page-link" href="#">10</a></li>
                <li class="page-item"><a class="page-link" href="#">Próxima &raquo;</a></li>
            </ul>
        </nav>
    </div>
</section>
