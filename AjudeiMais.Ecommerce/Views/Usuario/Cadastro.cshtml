@model AjudeiMais.Ecommerce.Models.UsuarioModel

<section class="mx-auto mt-10 max-w-4xl rounded-xl bg-white p-6 shadow ring-1 ring-gray-200">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Cadastro de Usuário</h1>

    <form method="post" action="/Usuario/Cadastro" enctype="multipart/form-data" class="space-y-8">
        <!-- Dados do Usuário -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Dados do Usuário</h2>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Nome Completo <span class="text-red-500">*</span></label>
                <input type="text" name="NomeCompleto" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">CPF <span class="text-red-500">*</span></label>
                <input type="text" name="Documento" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">E-mail <span class="text-red-500">*</span></label>
                <input type="email" name="Email" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Telefone <span class="text-red-500">*</span></label>
                <input type="text" name="Telefone" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Foto de Perfil <span class="text-red-500">*</span></label>
                <input type="file" name="FotoPerfil" class="block w-full text-sm text-gray-500 file:mr-4 file:rounded-md file:border-0 file:bg-secondary file:px-4 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-orange-700" />
            </div>
        </div>

        <!-- Endereço -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Endereço</h2>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">CEP <span class="text-red-500">*</span></label>
                <input type="text" name="Cep" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Rua <span class="text-red-500">*</span></label>
                <input type="text" name="Rua" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Número <span class="text-red-500">*</span></label>
                <input type="text" name="Numero" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Complemento <span class="text-red-500">*</span></label>
                <input type="text" name="Complemento" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Bairro <span class="text-red-500">*</span></label>
                <input type="text" name="Bairro" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Cidade <span class="text-red-500">*</span></label>
                <input type="text" name="Cidade" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>
            
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Estado <span class="text-red-500">*</span></label>
                <input type="text" name="Estado" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>
        </div>

        <!-- Alterar Senha -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Alterar Senha</h2>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Senha Atual</label>
                <input type="password" name="Senha" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>

            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Nova Senha</label>
                <input type="password" name="NovaSenha" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm" />
            </div>
        </div>

        <!-- Botões -->
        <div class="mt-4 flex flex-col-reverse gap-4 sm:flex-row sm:justify-between">
            <button type="submit" class="w-full rounded-lg bg-secondary px-6 py-2 text-white">Cadastrar</button>
            <button type="reset" class="w-full rounded-lg border border-gray-400 px-6 py-2 text-gray-600">Cancelar</button>
        </div>
    </form>
</section>
