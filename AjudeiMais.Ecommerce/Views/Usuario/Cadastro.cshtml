@model AjudeiMais.Ecommerce.Models.UsuarioModel

@section Styles {
	<link rel="stylesheet" href="~/css/usuario/usuario-cadastro.css" asp-append-version="true" />
}

@{
	await Html.RenderPartialAsync("_Alertas");
}

<div class="container">
	<div class="form-container">
		<!-- Progress Bar -->
		<div class="progress-container">
			<div class="progress-bar"></div>
		</div>

		<!-- Header -->
		<div class="form-header">
			<h1>Cadastro de Usuário</h1>
			<p class="mb-0">Preencha os campos abaixo para criar sua conta</p>
		</div>

		<!-- Form Steps Indicator -->
		<div class="container mt-4">
			<div class="step-indicator">
				<div class="step active">
					<div class="step-number">1</div>
					<div class="step-title">Dados Pessoais</div>
				</div>
				<div class="step">
					<div class="step-number">2</div>
					<div class="step-title">Endereço</div>
				</div>
				<div class="step">
					<div class="step-number">3</div>
					<div class="step-title">Finalizar</div>
				</div>
			</div>
		</div>
		<!-- Form Content -->
		<div class="section-padding container pb-4">
			<form id="formularioCadastro" method="post" action="/Usuario/Cadastro" enctype="multipart/form-data">
				<!-- Dados Pessoais Section -->
				<div class="form-step active">
					<div class="mb-5">
						<h2 class="section-title mb-4">
							<i class="bi bi-person-badge"></i>
							Dados Pessoais
						</h2>

						<div class="row g-4">
							<div class="col-12">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="nomeCompleto" name="NomeCompleto" placeholder="Nome Completo" required>
									<label for="nomeCompleto" class="required-field">Nome Completo</label>
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-floating">
									<input autocomplete="on"  type="text" class="form-control" id="documento" name="Documento" placeholder="CPF" required>
									<label for="documento" class="required-field">CPF</label>
								</div>
								<div class="form-text">Formato: 000.000.000-00</div>
							</div>

							<div class="col-md-6">
								<div class="form-floating">
									<input autocomplete="on" type="email" class="form-control" id="email" name="Email" placeholder="E-mail" required>
									<label for="email" class="required-field">E-mail</label>
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-floating">
									<input autocomplete="on" type="tel" class="form-control" id="telefone" name="Telefone" placeholder="Telefone" required>
									<label for="telefone" class="required-field">Telefone</label>
								</div>
								<div class="form-text">Formato: (00) 00000-0000</div>
							</div>

							<div class="col-md-6">
								<div class="form-floating">
									<input autocomplete="on" type="tel" class="form-control" id="telefoneFixo" name="TelefoneFixo" placeholder="Telefone Fixo (Opcional)">
									<label for="telefoneFixo">Telefone Fixo</label>
								</div>
								<div class="form-text">Formato: (00) 0000-0000</div>
							</div>

							<div class="col-md-6">
								<label class="form-label required-field mb-2">Foto de Perfil</label>
								<label for="fotoPerfil" class="file-upload d-block">
									<input type="file" class="d-none" id="fotoPerfil" name="FotoPerfil" required>
									<i class="bi bi-cloud-arrow-up"></i>
									<p class="mb-0">Clique ou arraste sua foto aqui</p>
									<small class="text-muted">(Tamanho máximo: 5MB)</small>
								</label>
							</div>
						</div>
					</div>
				</div>

				<div class="form-step">
					<!-- Endereço Section -->
					<div class="mb-5">
						<h2 class="section-title mb-4">
							<i class="bi bi-geo-alt"></i>
							Endereço
						</h2>

						<div class="row g-4">
							<div class="col-md-4">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="cep" name="Cep" placeholder="CEP" required>
									<label for="cep" class="required-field">CEP</label>
								</div>
								<div class="form-text">
									<a href="https://buscacepinter.correios.com.br/app/endereco/index.php" target="_blank" class="text-decoration-none">
										Não sei meu CEP
									</a>
								</div>
							</div>

							<div class="col-md-8">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="rua" name="Rua" placeholder="Rua" required>
									<label for="rua" class="required-field">Rua</label>
								</div>
							</div>

							<div class="col-md-4">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="numero" name="Numero" placeholder="Número" required>
									<label for="numero" class="required-field">Número</label>
								</div>
							</div>

							<div class="col-md-8">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="complemento" name="Complemento" placeholder="Complemento">
									<label for="complemento">Complemento</label>
								</div>
							</div>

							<div class="col-md-4">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="bairro" name="Bairro" placeholder="Bairro" required>
									<label for="bairro" class="required-field">Bairro</label>
								</div>
							</div>

							<div class="col-md-5">
								<div class="form-floating">
									<input autocomplete="on" type="text" class="form-control" id="cidade" name="Cidade" placeholder="Cidade" required>
									<label for="cidade" class="required-field">Cidade</label>
								</div>
							</div>

							<div class="col-md-3">
								<div class="form-floating">
									<select autocomplete="on" class="form-select" id="estado" name="Estado" required>
										<option value="" selected disabled>Selecione</option>
										<option value="AC">AC</option>
										<option value="AL">AL</option>
										<option value="AP">AP</option>
										<option value="AM">AM</option>
										<option value="BA">BA</option>
										<option value="CE">CE</option>
										<option value="DF">DF</option>
										<option value="ES">ES</option>
										<option value="GO">GO</option>
										<option value="MA">MA</option>
										<option value="MT">MT</option>
										<option value="MS">MS</option>
										<option value="MG">MG</option>
										<option value="PA">PA</option>
										<option value="PB">PB</option>
										<option value="PR">PR</option>
										<option value="PE">PE</option>
										<option value="PI">PI</option>
										<option value="RJ">RJ</option>
										<option value="RN">RN</option>
										<option value="RS">RS</option>
										<option value="RO">RO</option>
										<option value="RR">RR</option>
										<option value="SC">SC</option>
										<option value="SP">SP</option>
										<option value="SE">SE</option>
										<option value="TO">TO</option>
									</select>
									<label for="estado" class="required-field">Estado</label>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Termos e Condições -->
				<div class="form-step">
					<div class="mb-4">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" id="termos" required>
							<label class="form-check-label" for="termos">
								Li e aceito os <a href="#" class="text-decoration-none">Termos de Uso</a> e <a href="#" class="text-decoration-none">Política de Privacidade</a>
							</label>
						</div>
					</div>
				</div>

				<!-- Navegação entre etapas -->
				<div class="row g-3 mt-4">
					<div class="col-md-6">
						<button type="button" id="btnVoltar" class="btn btn-outline-secondary w-100 d-none py-3">Voltar</button>
					</div>
					<div class="col-md-6">
						<button type="button" id="btnProximo" class="btn btn-primary w-100 py-3">
							Próximo <i class="bi bi-arrow-right ms-2"></i>
						</button>
						<button type="submit" id="btnFinalizar" class="btn btn-primary w-100 d-none py-3">
							Criar Conta <i class="bi bi-check2-circle ms-2"></i>
						</button>
					</div>
				</div>

				<!-- Link para Login -->
				<div class="mt-4 text-center">
					<p class="mb-0">
						Já possui uma conta? <a href="#" class="text-decoration-none">Entrar</a>
					</p>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Bootstrap & JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

<script>
		jQuery(document).ready(function($) {
		$('#documento').mask('000.000.000-00');
		$('#telefone').mask('(00) 00000-0000');
		$('#telefoneFixo').mask('(00) 0000-0000');
		$('#cep').mask('00.000-000');
	});
</script>


<script type="module" src="~/js/paginas/cadastro-usuario/form-validacoes.js"></script>
<script type="module" src="~/js/paginas/cadastro-usuario/form-tabs.js"></script>
<script src="~/js/paginas/cadastro-usuario/buscar-cep.js"></script>
