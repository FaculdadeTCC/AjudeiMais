@{
    ViewData["Title"] = "Alterar Dados Pessoais";
}

<section class="mx-auto mt-10 max-w-4xl rounded-xl bg-white p-6 shadow ring-1 ring-gray-200">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Alterar Dados Pessoais</h1>

    <form method="post" enctype="multipart/form-data" class="space-y-8">

        <!-- Grupo: Dados do Usuário -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Dados do Usuário</h2>

            <!-- Nome -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Nome Completo <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Nome" value="Luiz Henrique Silva" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- CPF -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    CPF <span class="text-red-500">*</span>
                </label>
                <input type="text" name="CPF" value="123.456.789-00" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- E-mail -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    E-mail <span class="text-red-500">*</span>
                </label>
                <input type="email" name="Email" value="luiz@email.com" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Foto de Perfil -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Foto de Perfil <span class="text-red-500">*</span>
                </label>
                <input type="file" name="FotoPerfil" class="block w-full text-sm text-gray-500 file:mr-4 file:rounded-md file:border-0 file:bg-secondary file:px-4 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-orange-700" />
            </div>
        </div>

        <!-- Grupo: Endereço -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Endereço</h2>

            <!-- CEP -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    CEP <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Cep" value="30140-120" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Rua -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Rua <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Rua" value="Rua dos Andradas" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Número -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Número <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Numero" value="123" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Complemento -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Complemento <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Complemento" value="Apto 302" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Bairro -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Bairro <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Bairro" value="Centro" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Cidade -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">
                    Cidade <span class="text-red-500">*</span>
                </label>
                <input type="text" name="Cidade" value="Belo Horizonte" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>
        </div>

        <!-- Grupo: Alterar Senha -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <h2 class="border-b pb-2 text-lg font-semibold text-gray-700 md:col-span-2">Alterar Senha</h2>

            <!-- Senha Atual -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Senha Atual</label>
                <input type="password" name="SenhaAtual" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>

            <!-- Nova Senha -->
            <div>
                <label class="mb-1 block text-sm font-medium text-gray-700">Nova Senha</label>
                <input type="password" name="NovaSenha" class="w-full rounded-lg border-gray-300 px-4 py-2 shadow-sm focus:border-primary focus:ring focus:ring-primary/30" />
            </div>
        </div>

        <!-- Botões -->
        <div class="mt-4 flex flex-col-reverse gap-4 sm:flex-row sm:justify-between">
            <button type="submit"
                    class="w-full rounded-lg bg-secondary px-6 py-2 text-white transition hover:bg-orange-700 sm:w-auto">
                Salvar Alterações
            </button>

            <button type="button"
                    class="w-full rounded-lg border border-red-500 px-6 py-2 text-red-500 transition hover:bg-red-50 sm:w-auto">
                Excluir Conta
            </button>
        </div>
    </form>
</section>
