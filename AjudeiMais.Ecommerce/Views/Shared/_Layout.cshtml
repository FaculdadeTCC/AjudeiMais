<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AjudeiMais.Ecommerce</title>

    <!-- Head -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@("@splidejs")/splide@4.1.3/dist/css/splide.min.css">
    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="~/AjudeiMais.Ecommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/flowbite@1.6.5/dist/flowbite.min.js"></script>
</head>
<body class="flex min-h-screen flex-col bg-background font-sans">

    <!-- Header fixo -->
    <header>
        <nav class="fixed left-0 top-0 z-50 w-full bg-secondary py-4 text-white shadow-md">
            <div class="container mx-auto flex flex-wrap items-center justify-between px-6">
                <!-- Logo -->
                <div class="flex items-center gap-3 text-2xl font-bold">
                    <div class="flex h-12 w-12 items-center justify-center rounded-full shadow-lg">
                        <img src="~/img/brand/logo_icon.png" />
                    </div>
                    <span class="text-white">Ajudei+</span>
                </div>

                <!-- Botão do menu mobile -->
                <button data-collapse-toggle="navbar-default" type="button" class="ml-3 inline-flex items-center rounded-lg p-2 text-sm text-white hover:bg-primary focus:outline-none focus:ring-2 focus:ring-gray-200 md:hidden" aria-controls="navbar-default" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>

                <!-- Menu -->
                <div class="hidden w-full md:flex md:items-center md:w-auto" id="navbar-default">
                    <div class="mt-4 flex flex-col gap-6 text-lg md:flex-row md:items-center md:mt-0">
                        <!-- Barra de pesquisa -->
                        <div class="relative w-full md:w-64">
                            <input type="text" placeholder="Buscar itens..." class="w-full rounded-full border border-gray-300 px-5 py-2 text-gray-700 shadow-md focus:outline-none">
                            <i class="fa fa-search -translate-y-1/2 absolute right-4 top-1/2 transform text-gray-500"></i>
                        </div>

                        <!-- Categorias -->
                        <div class="group relative">
                            <button class="flex items-center gap-1 font-medium text-white transition hover:text-primary">
                                Categorias <i class="fa fa-chevron-down text-sm"></i>
                            </button>
                            <div class="-translate-y-2 absolute left-0 z-50 mt-2 w-56 transform rounded-lg bg-white text-secondary opacity-0 shadow-lg transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
                                <a href="#" class="block border-b border-gray-100 px-5 py-3 hover:bg-background">Roupas</a>
                                <a href="#" class="block border-b border-gray-100 px-5 py-3 hover:bg-background">Alimentos</a>
                                <a href="#" class="block border-b border-gray-100 px-5 py-3 hover:bg-background">Brinquedos</a>
                                <a href="#" class="block px-5 py-3 hover:bg-background">Outros</a>
                            </div>
                        </div>

                        <a href="#" class="font-medium text-white visited:text-white hover:text-primary">Produtos</a>
                        <a href="#" class="font-medium text-white visited:text-white hover:text-primary">Sobre</a>
                        <a href="#" class="font-medium text-white visited:text-white hover:text-primary">Doar Agora</a>

                        <!-- Usuário -->
                        <div class="group relative">
                            <button class="flex items-center gap-2 rounded-full bg-primary px-5 py-2 font-semibold text-white shadow-md transition hover:bg-orange-700">
                                <i class="fa fa-user"></i> Luiz
                            </button>
                            <div class="-translate-y-2 absolute right-0 z-50 mt-2 w-48 transform rounded-lg bg-white text-secondary opacity-0 shadow-lg transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0">
                                <a href="#" class="block border-b border-gray-100 px-5 py-3 hover:bg-background">Meu Perfil</a>
                                <a href="#" class="block px-5 py-3 hover:bg-background">Sair</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Compensação para o header fixo -->
    <div class="h-20"></div>

    <!-- Conteúdo principal -->
    <main role="main" class="w-full flex-grow px-6 pb-8 md:px-24">
        @RenderBody()
    </main>

    <!-- Footer sempre no fim -->
    <footer class="mt-auto bg-secondary py-4 text-white shadow-inner">
        <div class="container mx-auto text-center text-sm">
            &copy; 2025 - AjudeiMais.Ecommerce -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white underline hover:text-primary">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Final do body -->
    <script src="https://cdn.jsdelivr.net/npm/@("@splidejs")/splide@4.1.3/dist/js/splide.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new Splide('.splide', {
                type   : 'loop',
                perPage: 1,
                autoplay: true,
            }).mount();
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
