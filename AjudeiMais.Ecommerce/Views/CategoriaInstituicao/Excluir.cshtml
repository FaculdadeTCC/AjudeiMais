<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content" action="@Url.RouteUrl("categoria-instituicao-excluir")" method="post">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza de que deseja excluir esta categoria?</p>
                <p class="text-danger">Esta ação não pode ser desfeita.</p>
                <input type="hidden" name="CategoriaProduto_ID" id="categoryIdToDelete" /> @* Hidden field to store the ID *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">Excluir</button>
            </div>
        </form>
    </div>
</div>