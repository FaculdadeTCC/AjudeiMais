@{
    ViewData["Title"] = "Cesta básica contendo arroz, feijão, óleo e açúcar.";
}

<section class="mx-auto mt-10 max-w-6xl rounded-xl bg-white p-8 shadow ring-1 ring-gray-200">
    <!-- Título -->
    <h1 class="mb-6 text-3xl font-bold text-gray-800">Nome do Produto: <span class="text-primary">Cesta Básica</span></h1>

    <!-- Carousel de Imagens (com Splide.js) -->
    <div class="mb-8">
        <div id="splide" class="splide">
            <div class="splide__track">
                <ul class="splide__list">
                    <li class="splide__slide">
                        <img src="https://tse1.mm.bing.net/th?id=OIP.n1_ZQqTnIo0xvltVPgS48wHaFj&pid=Api" alt="Cesta Básica 1" class="h-64 w-full rounded-xl object-cover" />
                    </li>
                    <li class="splide__slide">
                        <img src="https://tse1.mm.bing.net/th?id=OIP.n1_ZQqTnIo0xvltVPgS48wHaFj&pid=Api" alt="Cesta Básica 2" class="h-64 w-full rounded-xl object-cover" />
                    </li>
                    <li class="splide__slide">
                        <img src="https://tse1.mm.bing.net/th?id=OIP.n1_ZQqTnIo0xvltVPgS48wHaFj&pid=Api" alt="Cesta Básica 3" class="h-64 w-full rounded-xl object-cover" />
                    </li>
                </ul>
            </div>
        </div>

        <script>
            new Splide('#splide', {
                type: 'loop',
                perPage: 1,
                autoplay: true,
                interval: 3000,
            }).mount();
        </script>
    </div>

    <!-- Informações principais -->
    <div class="grid grid-cols-1 gap-6 text-gray-700 md:grid-cols-2">
        <!-- Coluna 1 -->
        <div class="space-y-4">
            <div>
                <span class="font-semibold">Descrição:</span>
                <p class="mt-1 text-sm text-gray-600">Cesta básica contendo arroz, feijão, óleo e açúcar.</p>
            </div>

            <div>
                <span class="font-semibold">Condição:</span>
                <p class="mt-1">Novo</p>
            </div>

            <div>
                <span class="font-semibold">Validade (se aplicável):</span>
                <p class="mt-1">15/04/2025</p>
            </div>

            <div>
                <span class="font-semibold">Categoria:</span>
                <p class="mt-1">Alimentos</p>
            </div>
        </div>

        <!-- Coluna 2 -->
        <div class="space-y-4">
            <div>
                <span class="font-semibold">Quantidade:</span>
                <p class="mt-1">3 unidades</p>
            </div>

            <div>
                <span class="font-semibold">Peso Total:</span>
                <p class="mt-1">6 kg</p>
            </div>

            <div>
                <span class="font-semibold">Status da Doação:</span>
                <p class="mt-1">
                    <span class="inline-block rounded-full bg-green-100 px-3 py-1 text-sm font-semibold text-green-700">Disponível</span>
                </p>
            </div>

            <div>
                <span class="font-semibold">Doador:</span>
                <div class="mt-1 flex items-center gap-3">
                    <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="Doador" class="h-10 w-10 rounded-full border object-cover" />
                    <div>
                        <p class="font-medium">Maria Oliveira</p>
                        <p class="text-sm text-gray-500">Belo Horizonte - MG</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações -->
    <div class="mt-8 flex flex-col justify-between gap-4 sm:flex-row">
        <a href="/mensagem/enviar" class="inline-flex w-full items-center justify-center rounded-lg bg-secondary px-6 py-2 text-white transition hover:bg-orange-700 sm:w-auto">
            Solicitar Doador
        </a>

        <a href="/anuncios" class="inline-flex w-full items-center justify-center rounded-lg border border-gray-300 px-6 py-2 text-gray-600 transition hover:bg-gray-100 sm:w-auto">
            Voltar para Anúncios
        </a>
    </div>
</section>
