@{
    ViewData["Title"] = "Editar Anúncio";
}

<section class="mx-auto mt-10 max-w-4xl rounded-2xl bg-white p-8 shadow-lg ring-1 ring-gray-200">
    <h2 class="mb-6 text-2xl font-bold text-gray-800">Editar Anúncio</h2>

    <form asp-action="EditarAnuncio" method="post" enctype="multipart/form-data" class="space-y-6">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
            <!-- Nome -->
            <div>
                <label class="mb-1 block font-medium text-gray-700">Nome do Produto</label>
                <input type="text" name="Nome" value="@Model.Nome" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" required />
            </div>

            <!-- Condição -->
            <div>
                <label class="mb-1 block font-medium text-gray-700">Condição</label>
                <select name="Condicao" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary">
                    <option @(Model.Condicao == "Novo" ? "selected" : "")>Novo</option>
                    <option @(Model.Condicao == "Usado - Bom" ? "selected" : "")>Usado - Bom</option>
                    <option @(Model.Condicao == "Usado - Regular" ? "selected" : "")>Usado - Regular</option>
                </select>
            </div>

            <!-- Validade -->
            <div>
                <label class="mb-1 block font-medium text-gray-700">Validade (se aplicável)</label>
                <input type="date" name="Validade" value="@Model.Validade?.ToString("yyyy-MM-dd")" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" />
            </div>

            <!-- Quantidade -->
            <div>
                <label class="mb-1 block font-medium text-gray-700">Quantidade</label>
                <input type="number" name="Quantidade" min="1" value="@Model.Quantidade" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" required />
            </div>

            <!-- Peso -->
            <div>
                <label class="mb-1 block font-medium text-gray-700">Peso (kg)</label>
                <input type="number" step="0.1" name="Peso" min="0" value="@Model.Peso" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" required />
            </div>

            <!-- Categoria -->
            <div>
                <label class="mb-1 block font-medium text-gray-700">Categoria</label>
                <select name="Categoria" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary">
                    <option @(Model.Categoria == "Alimentos" ? "selected" : "")>Alimentos</option>
                    <option @(Model.Categoria == "Roupas" ? "selected" : "")>Roupas</option>
                    <option @(Model.Categoria == "Higiene" ? "selected" : "")>Higiene</option>
                    <option @(Model.Categoria == "Móveis" ? "selected" : "")>Móveis</option>
                    <option @(Model.Categoria == "Outros" ? "selected" : "")>Outros</option>
                </select>
            </div>
        </div>

        <!-- Descrição -->
        <div>
            <label class="mb-1 block font-medium text-gray-700">Descrição</label>
            <textarea name="Descricao" rows="4" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" required>@Model.Descricao</textarea>
        </div>

        <!-- Imagem Principal e Mais Imagens com UX aprimorado -->
        <div>
            <label class="mb-1 block font-medium text-gray-700">Imagem Principal</label>
            <input type="file" id="ImagemPrincipal" name="ImagemPrincipal" accept="image/*" class="w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-primary focus:ring-1 focus:ring-primary" onchange="previewImagemPrincipal(event)" />
            <div class="mt-4">
                <img id="previewImagem" src="@Model.ImagemUrl" alt="Pré-visualização" class="@((string.IsNullOrEmpty(Model.ImagemUrl) ? "hidden" : "")) max-h-48 rounded-md border border-gray-300" />
            </div>
            <div class="mt-4">
                <a href="/anuncio/imagens/@Model.Id" class="inline-block rounded-lg bg-secondary px-6 py-2 text-sm font-semibold text-white shadow-md transition hover:bg-orange-700">
                    + Gerenciar Mais Imagens
                </a>
            </div>
        </div>

        <!-- Botão de salvar -->
        <div class="mt-6 flex justify-end">
            <button type="submit" class="rounded-lg bg-primary px-6 py-3 text-sm font-semibold text-white shadow-md transition hover:bg-blue-700">
                Salvar Alterações
            </button>
        </div>
    </form>
</section>

<script>
    function previewImagemPrincipal(event) {
        const file = event.target.files[0];
        const preview = document.getElementById('previewImagem');

        if (file) {
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.classList.remove('hidden');
            }

            reader.readAsDataURL(file);
        } else {
            preview.src = "#";
            preview.classList.add('hidden');
        }
    }
</script>
